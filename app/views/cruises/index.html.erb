<p id="notice"><%= notice %></p>

<h1>Cruises</h1>

<table>
  <thead>
    <tr>
      <th>Line</th>
      <th>Code</th>
      <th>Start</th>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cruises.each do |cruise| %>
      <tr>
        <td><%= cruise.line %></td>
        <td><%= cruise.code %></td>
        <td><%= cruise.start %></td>
        <td><%= cruise.days %></td>
        <td><%= link_to 'Show', cruise %></td>
        <td><%= link_to 'Edit', edit_cruise_path(cruise) %></td>
        <td><%= link_to 'Destroy', cruise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cruise', new_cruise_path %>
